{% extends 'base.html.twig' %}

{% block title %}Links{% endblock %}

{% block content %}
    <h3 class="text-center">LINKS</h3>

    <div class="row">

        <table class="table">
            <thead class="thead-dark">
                <tr>
                <th scope="col">#</th>
                <th scope="col">Fake Link</th>
                <th scope="col">Original Link</th>
                <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {% for link in links %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td><a class="text-primary" href="{{link.id }}">http://symfony.localhost/{{ link.id }}</a></td>
                    <td>{{ link.original }}</td>
                    <td> {{ include('links/_delete_form.html.twig') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no links found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
